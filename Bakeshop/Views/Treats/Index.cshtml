@{
  Layout = "_Layout";
}

@using Bakeshop.Models;
<h2>~Treats~</h2>

@if (@Model.Count == 0)
{
  <p>No treats have been added</p>
}

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink(@treat.Type, "Details", new { id = treat.TreatId })</li>
}

<p>@Html.ActionLink("Add a New Treat", "Create")</p>