@{
  Layout = "_Layout";
}

@using Bakeshop.Models;
<h2>~Flavors~</h2>

@if (@Model.Count == 0)
{
  <p>No flavors have been added</p>
}

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink(@flavor.Type, "Details", new { id = flavor.FlavorId })</li>
}

<p>@Html.ActionLink("Add a New Flavor", "Create")</p>